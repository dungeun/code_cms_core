# 데이터베이스 설정
DATABASE_URL="postgresql://user:password@localhost:5432/blee_cms"

# 세션 보안 (필수 - 최소 32자 이상)
SESSION_SECRET="your-super-secret-session-key-here-change-this-in-production-minimum-32-characters"

# 애플리케이션 설정
NODE_ENV="development"
PORT=3000
CMS_VERSION="1.0.0"

# 플러그인 설정
PLUGIN_DIR="./app/plugins"

# 이메일 설정 (선택사항)
EMAIL_FROM="noreply@example.com"
EMAIL_SMTP_HOST="smtp.example.com"
EMAIL_SMTP_PORT="587"
EMAIL_SMTP_USER="your-email@example.com"
EMAIL_SMTP_PASS="your-password"

# 테스트 계정 설정 (개발 환경용 - 프로덕션에서는 반드시 제거)
# ⚠️ 보안 경고: 실제 프로덕션 배포 시 이 섹션을 완전히 삭제하세요!
# TEST_ADMIN_EMAIL="admin@example.com"
# TEST_ADMIN_PASSWORD="SecureAdminPassword123!@#" 
# TEST_USER_EMAIL="user@example.com"
# TEST_USER_PASSWORD="SecureUserPassword123"

# 보안 설정
BCRYPT_ROUNDS="12"
SESSION_MAX_AGE="2592000000" # 30일 (밀리초)
RATE_LIMIT_WINDOW="900000" # 15분
RATE_LIMIT_MAX="100" # 요청 수

# 파일 업로드 설정
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760" # 10MB