# Coolify 배포 환경 변수 예제
# 이 파일을 복사하여 Coolify 대시보드에서 환경 변수로 설정

# 앱 설정
NODE_ENV=production
PORT=3000
APP_URL=https://your-domain.com
APP_VERSION=1.0.0
DOMAIN=your-domain.com

# 데이터베이스 설정
DATABASE_URL=postgresql://username:password@db-host:5432/blee_cms?schema=public
DATABASE_REPLICA_URL=postgresql://username:password@db-replica:5432/blee_cms?schema=public

# Redis 클러스터
REDIS_CLUSTER_NODES=redis-node1:6379,redis-node2:6379,redis-node3:6379

# 세션 설정
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Kakao OAuth
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=https://your-domain.com/auth/kakao/callback

# Naver OAuth
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URI=https://your-domain.com/auth/naver/callback

# Toss Payments
TOSS_CLIENT_KEY=your-toss-client-key
TOSS_SECRET_KEY=your-toss-secret-key

# 모니터링
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# 보안 설정
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 스토리지
UPLOAD_DIR=/app/public/uploads
MAX_FILE_SIZE=104857600

# Socket.IO
SOCKET_IO_ENABLED=true
SOCKET_IO_CORS=https://your-domain.com

# Grafana (선택사항)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# Coolify 전용 설정
COOLIFY_WEBHOOK_SECRET=your-webhook-secret
COOLIFY_AUTO_DEPLOY=true
COOLIFY_BRANCH=main